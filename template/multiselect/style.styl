oi-multiselect
  display block
  width 100%

  .multiselect
    &-search
      cursor text
      padding 4px 12px
      border 1px solid #d9d9d9
      background-color white
      overflow hidden !important
      box-sizing border-box

      &.open
        border-top 1px solid rgba(0,178,179,.6)
        border-bottom 1px solid rgba(0,178,179,.1)
        border-left 1px solid rgba(0,178,179,.6)
        border-right 1px solid rgba(0,178,179,.6)
        border-radius 2px 2px 0 0

      &-list
        list-style none
        margin 0
        padding 2px 4px

        &-item
          font-size 14px
          font-weight normal
          display inline-block
          margin 2px 4px 2px 0

          &_selection
            cursor pointer
            background #f2f2f2
            border 0px solid #d0d0d0
            border-radius 0
            color #000000
            padding 3px 5px

            &:hover
            &:active
              color #000
              background #f2f2f2
              border 0px solid #d0d0d0
              box-shadow none

            &:active
              box-shadow inset 0 0 10px 4px rgba(255,255,255,1)

            &.focused
              background-color #d9534f
              color white
              border-color #d43f3a

            &-remove
              float right
              padding-left 4px

          &_loader
            float right
            margin-top 6px
            width 16px
            height 16px
            background top url('data:image/gif;base64,')

          &_input input
            margin 2px
            outline 0
            border 0

    &-dropdown
      position absolute
      width inherit
      overflow-y scroll
      max-height 200px
      min-width 160px
      font-size 14px
      background-color #fff
      border-top 1px solid rgba(0,178,179,.1)
      border-bottom 1px solid rgba(0,178,179,.6)
      border-left 1px solid rgba(0,178,179,.6)
      border-right 1px solid rgba(0,178,179,.6)
      background-clip padding-box
      z-index 1000

      &-optgroup
        margin 0
        padding 0

        &-header
          font-weight bolder
          padding 3px 20px
          border-bottom 1px solid rgba(0,178,179,.175)

        &-option
          padding 10px 20px
          border-bottom 1px solid rgba(0,178,179,.175)


          &.active
            background-color #f5f5f5
            cursor pointer

  &:not([multiple])
    .multiselect
      &-search
        &-list
          &-item
            &_input
              &:nth-child(2)
                display none

            &_selection
              color #000
              width 100%
              text-align left

              &:not(:active)
                background none

  &[disabled="disabled"]
    .multiselect
      &-search
        cursor default
        border 1px solid #bdbdbd
        opacity 0.5

        &-list
          &-item
            &_selection
              cursor default
              background none
              box-shadow none

              &-remove
                 visibility hidden

            &_input
              input:disabled
                background  none

  &[readonly]:not([multiple])
    .multiselect
      &-search
        &-list
          &-item
            &_selection
              &-remove
                display none

        &:after
          content ""
          position absolute
          display block
          right 15px
          width 0
          height 0
          margin-top -20px;
          border-color #008b81 transparent transparent transparent
          border-style solid;
          border-width 5px 5px 0 5px

        &.open:after
          border-color transparent transparent #008b81 transparent
          border-width 0 5px 5px 5px